generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  files     File[]
}

model File {
  id           String   @id @default(uuid())
  token        String   @unique @default(uuid())
  originalName String
  mimeType     String
  size         Int
  storagePath  String
  filePassword String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}